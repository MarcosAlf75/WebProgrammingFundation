
@{
    ViewBag.Title = "DetailsMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <h2>@Model.Name</h2>

    <p>
        <ul>
            <li>Type: @Model.MovieT.TypeDescription</li>
            <li>Release Date: @Model.ReleaseDate.ToString("dddd, MMMM dd, yyyy")</li>
            <li>Day Added: @Model.DayAdded.ToString("dddd, MMMM dd, yyyy")</li>
            <li>Number in Stock: @Model.NumberInStock</li>
        </ul>
    </p>

</body>