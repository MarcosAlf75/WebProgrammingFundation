
@model IEnumerable<VideoRentalApp.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <h2>Movies</h2>

    @if (!Model.Any())
    {
        <p>We don't have any movie yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Type</th>
                    <td>@Html.ActionLink(item.Name, "Details", "Movies", new { id = item.Id }, null)</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(movie.Name, "DetailsMovie", "Movie", new { id = movie.Id }, null)</td>
                        <td>@movie.MovieT.TypeDescription</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>

